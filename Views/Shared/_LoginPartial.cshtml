@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="navbar-nav ms-md-auto">
        <li>
            @Html.ActionLink(User.Identity.GetUserName(), "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage", @class="btn btn-info btn-lg text-dark" })
        </li>
        <li><a class="btn btn-info btn-lg text-dark" href="javascript:document.getElementById('logoutForm').submit()">Logoff</a></li>
    </ul>
    }
}
else
{
    <ul class="navbar-nav ms-md-auto">
        <li class="nav-item">@Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink", @class= "btn btn-info btn-lg text-dark" })</li>
        <li class="nav-item">@Html.ActionLink("Login", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink", @class= "btn btn-info btn-lg text-dark" })</li>
    </ul>
}
