@model IEnumerable<CompendiumIdentity.Models.Project>

@{
    ViewBag.Title = "Projects";
}

<h2>Your Projects</h2>

<p>
    @Html.ActionLink(" New Project", "Create", new { area=""}, new { @class = " text-dark btn btn-info btn-lg fas fa-plus-square fa-lg"})
</p>

<div class="container d-flex flex-wrap">
    @foreach (var Item in Model)
    {
    <div class="card" style="width: 18rem; margin: 10px; border: thin; border-color: slategray">
        <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcRYGpw8iuDbMU-JHZM_mwlw7p8CSkKY_D5M8w&usqp=CAU" class="card-img-top" alt="Card image cap">
        <div class="card-body bg-gradient">
            <h5 class="card-title text-light">@Item.Name</h5>
           @Html.ActionLink("Jump In","Index","Features",new { id = Item.ProjectID}, new { @class="btn btn-info btn-lg text-dark"})
            @Html.ActionLink(" Delete","Delete", "Projects", new { id = Item.ProjectID }, new { @class="btn btn-secondary btn-lg fas fa-trash-alt"})
        </div>
    </div>
    }

</div>