@model IEnumerable<CompendiumIdentity.Models.Todo>

@{
    ViewBag.Title = "To Do";
}

<h2>TO-DO</h2>

<p>
    @Html.ActionLink("Create New", "Create","Todoes",new { area=""}, new { @class="btn btn-info btn-lg text-dark"})
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsDone)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsDone)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.TodoID }) |
            @Html.ActionLink("Details", "Details", new { id=item.TodoID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.TodoID })
        </td>
    </tr>
}

</table>
